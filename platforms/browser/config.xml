<?xml version='1.0' encoding='utf-8'?>
<widget id="com.s0up.happyseller" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>VueWebpackBoilerplate</name>
    <description>
        VueJS 2.0 + Vue Router + Cordova + Webpack Boilerplate
    </description>
    <author email="mike@haxt.net" href="http://mktr.co">
        s0up
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
</widget>
